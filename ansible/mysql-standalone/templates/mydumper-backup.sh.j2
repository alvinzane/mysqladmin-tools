#!/usr/bin/env bash

{% if general_log %}
mysql -S {{ mysql_sock }} -u{{ mysql_backup_user }} -p{{ mysql_backup_password }} -e "set global general_log=on"
{% endif %}

CUR_TIME=`date +%Y%m%d`
BACKUP_DIR={{ mysql_backup_dir }}/mydumper"$CUR_TIME"
mydumper -S {{ mysql_sock }} -u {{ mysql_backup_user }} -p {{ mysql_backup_password }} --database  {{ database }} --outputdir=$BACKUP_DIR

{% if general_log %}
mysql -S {{ mysql_sock }} -u{{ mysql_backup_user }} -p{{ mysql_backup_password }} -e "set global general_log=off"
{% endif %}